{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LuminoraCore Personality Schema",
  "description": "Universal standard for AI personality definitions",
  "type": "object",
  "required": ["persona", "core_traits", "linguistic_profile", "behavioral_rules"],
  "properties": {
    "persona": {
      "type": "object",
      "required": ["name", "version", "description", "author", "language", "compatibility"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "Unique name of the personality"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Semantic version of the personality"
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "maxLength": 500,
          "description": "Brief description of the personality"
        },
        "author": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "Creator of the personality"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
          },
          "uniqueItems": true,
          "description": "Tags for categorization and search"
        },
        "language": {
          "type": "string",
          "enum": ["en", "es", "fr", "de", "it", "pt", "zh", "ja", "ko", "ru"],
          "description": "Primary language of the personality"
        },
        "compatibility": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "enum": ["openai", "anthropic", "llama", "mistral", "cohere", "google"]
          },
          "uniqueItems": true,
          "description": "Supported LLM providers"
        }
      },
      "additionalProperties": false
    },
    "core_traits": {
      "type": "object",
      "required": ["archetype", "temperament", "communication_style"],
      "properties": {
        "archetype": {
          "type": "string",
          "enum": [
            "scientist", "adventurer", "caregiver", "skeptic", "trendy", 
            "leader", "motivator", "rebel", "academic", "charming"
          ],
          "description": "Core personality archetype"
        },
        "temperament": {
          "type": "string",
          "enum": ["calm", "energetic", "serious", "playful", "mysterious", "direct", "cool"],
          "description": "Overall temperament"
        },
        "communication_style": {
          "type": "string",
          "enum": ["formal", "casual", "technical", "conversational", "poetic", "humorous"],
          "description": "Primary communication approach"
        }
      },
      "additionalProperties": false
    },
    "linguistic_profile": {
      "type": "object",
      "required": ["tone", "syntax", "vocabulary"],
      "properties": {
        "tone": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "friendly", "professional", "casual", "formal", "warm", "cool",
              "enthusiastic", "calm", "confident", "humble", "playful", "serious", "curious",
              "connected", "adventurous", "wise", "mysterious", "direct"
            ]
          },
          "uniqueItems": true,
          "minItems": 1,
          "description": "Primary tone characteristics"
        },
        "syntax": {
          "type": "string",
          "enum": ["simple", "complex", "varied", "concise", "elaborate"],
          "description": "Sentence structure preference"
        },
        "vocabulary": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          },
          "description": "Characteristic words and phrases"
        },
        "fillers": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
          },
          "uniqueItems": true,
          "description": "Common filler words and expressions"
        },
        "punctuation_style": {
          "type": "string",
          "enum": ["minimal", "moderate", "liberal", "excessive"],
          "description": "Punctuation usage style"
        }
      },
      "additionalProperties": false
    },
    "behavioral_rules": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 200
      },
      "minItems": 1,
      "description": "Core behavioral guidelines"
    },
    "trigger_responses": {
      "type": "object",
      "properties": {
        "on_greeting": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 5,
            "maxLength": 200
          },
          "description": "Responses to greetings"
        },
        "on_confusion": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 10,
            "maxLength": 200
          },
          "description": "Responses when confused"
        },
        "on_success": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 5,
            "maxLength": 200
          },
          "description": "Responses to successful completion"
        },
        "on_error": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 10,
            "maxLength": 200
          },
          "description": "Responses to errors"
        },
        "on_goodbye": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 5,
            "maxLength": 200
          },
          "description": "Responses to farewells"
        }
      },
      "additionalProperties": false
    },
    "advanced_parameters": {
      "type": "object",
      "properties": {
        "verbosity": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "Level of detail in responses"
        },
        "formality": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "Formality level"
        },
        "humor": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "Humor usage frequency"
        },
        "empathy": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "Empathy expression level"
        },
        "creativity": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "Creative expression level"
        },
        "directness": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "Directness in communication"
        }
      },
      "additionalProperties": false
    },
    "safety_guards": {
      "type": "object",
      "properties": {
        "forbidden_topics": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          },
          "uniqueItems": true,
          "description": "Topics to avoid"
        },
        "tone_limits": {
          "type": "object",
          "properties": {
            "max_aggression": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0
            },
            "max_informality": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0
            }
          },
          "additionalProperties": false
        },
        "content_filters": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["profanity", "violence", "adult", "political", "religious"]
          },
          "uniqueItems": true,
          "description": "Content filtering categories"
        }
      },
      "additionalProperties": false
    },
    "examples": {
      "type": "object",
      "properties": {
        "sample_responses": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["input", "output"],
            "properties": {
              "input": {
                "type": "string",
                "minLength": 5,
                "maxLength": 500,
                "description": "Example user input"
              },
              "output": {
                "type": "string",
                "minLength": 10,
                "maxLength": 1000,
                "description": "Example personality response"
              },
              "context": {
                "type": "string",
                "maxLength": 200,
                "description": "Optional context for the example"
              }
            },
            "additionalProperties": false
          },
          "minItems": 1,
          "description": "Example interactions"
        }
      },
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "Creation timestamp"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time",
          "description": "Last update timestamp"
        },
        "downloads": {
          "type": "integer",
          "minimum": 0,
          "description": "Download count"
        },
        "rating": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 5.0,
          "description": "Average user rating"
        },
        "license": {
          "type": "string",
          "enum": ["MIT", "Apache-2.0", "GPL-3.0", "CC-BY-4.0", "Custom"],
          "description": "License type"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
